---
import { getCollection } from "astro:content";
import { siteInfo } from "../../config/site-info";
import MainLayout from "../../layouts/MainLayout.astro";
import AuthorCard from "../../components/AuthorCard.astro";

const authors = await getCollection('author');
---

<MainLayout title="Listado de autores">
  <section class="container px-6 py-10 mx-auto">
    <h1 class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-white">{siteInfo.title}</h1>
    <a href="/" id="btn-back">Regresar</a>
  </section>
  <section class="grid grid-cols-1 sm:grid-cols-2 gap-2">
    {authors.map(author => (<AuthorCard author={author} />) )}
  </section>
</MainLayout>

<style is:global>
  a {
    @apply text-blue-500 hover:underline;
  }
</style>